<%- include('./header') %>
    <title>DemoExpress</title>
</head>
<body class="p-3 mb-2 bg-light">
    <%- include('./navbar.ejs') %>
    <h1 class="text-center">Ma liste d'amis</h1>
    <div class="d-flex flex-wrap justify-content-center gap-3">
        <% for (var i = 0; i < data.length; i++) { %>
            <div class="card" style="width: 20rem;">
                <img src='/public/img/profil<%= data[i].id %>.jpg' class="card-img-top" alt="img">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= data[i].name %></h5>
                  <p class="card-text"><%= data[i].email %></p>
                  <p class="card-text"><%= data[i].phone %></p>
                  <p class="card-text"><%= data[i].address %></p>
                  <a href="/userPage/<%= data[i].id %> " class="btn btn-secondary">Afficher</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>
